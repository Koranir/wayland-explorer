{
    "name": "wayland-explorer",
    "description": "Wayland protocol explorer",
    "version": "0.1.0",
    "private": true,
    "license": "MIT",
    "homepage": "/protocols",
    "dependencies": {
        "@headlessui/react": "^1.6.1",
        "@vscode/codicons": "^0.0.29",
        "plausible-tracker": "^0.3.1",
        "react": "^18.1.0",
        "react-dom": "^18.1.0",
        "react-scripts": "^5.0.1",
        "web-vitals": "^2.1.0",
        "wouter": "^2.7.4"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "env BUILD_PATH=build/protocols react-scripts build",
        "postbuild": "ts-node --project=./tsconfig.scripts.json ./scripts/bin/render-static-html.tsx",
        "test": "react-scripts test",
        "regenerate-protocols": "ts-node --project=./tsconfig.scripts.json ./scripts/bin/regenerate-protocols-data.ts",
        "print-registry": "ts-node --project=./tsconfig.scripts.json ./scripts/bin/print-protocol-registry-items.ts",
        "eject": "react-scripts eject"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
            "prettier --write"
        ]
    },
    "devDependencies": {
        "@testing-library/dom": "^8.13.0",
        "@testing-library/jest-dom": "^5.11.4",
        "@testing-library/react": "^13.2.0",
        "@testing-library/user-event": "^14.1.1",
        "@types/html-minifier": "^4.0.0",
        "@types/jest": "^27.0.1",
        "@types/node": "^17.0.31",
        "@types/react": "^18.0.9",
        "@types/react-dom": "^18.0.3",
        "autoprefixer": "^10.4.2",
        "fast-xml-parser": "^4.0.1",
        "html-minifier": "^4.0.0",
        "husky": "^7.0.2",
        "lint-staged": "^12.3.1",
        "postcss": "^8.4.5",
        "prettier": "^2.3.2",
        "tailwind-scrollbar": "^1.3.1",
        "tailwindcss": "^3.0.16",
        "ts-node": "^10.7.0",
        "typescript": "^4.6.4"
    }
}
